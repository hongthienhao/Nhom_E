@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "~/Areas/DeliveringStaff/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/deliveringStaff.css" />

<div class="container">
    <h2 class="page-title">Chi Tiết Đơn Hàng</h2>
    <div class="card">
        <div class="card-body">
            <h5>Thông Tin Đơn Hàng</h5>
            <p><strong>Mã Đơn Hàng:</strong> @Model.Id</p>
            <p><strong>Tên Sản Phẩm:</strong> @Model.ProductName</p>
            <p><strong>Tên Khách Hàng:</strong> @Model.CustomerName</p>
            <p><strong>Địa Điểm Giao Hàng:</strong> @Model.Address</p>
            <p><strong>Thời Gian Giao Hàng Dự Kiến:</strong> @Model.EstimatedDelivery</p>
            <p><strong>Trạng Thái:</strong> @Model.Status</p>
        </div>
        <a href="/DeliveringStaff/Home/OrderList" class="btn btn-secondary mt-3">Quay Lại Danh Sách</a>
    </div>
</div>
