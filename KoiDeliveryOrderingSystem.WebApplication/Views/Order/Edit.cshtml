@model KoiDeliveryOrderingSystem.Repositories.Order

<h2>Chỉnh sửa Đơn hàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label>Địa điểm Lấy hàng:</label>
        <input asp-for="PickupLocation" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa điểm Giao hàng:</label>
        <input asp-for="DeliveryLocation" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phương thức Vận chuyển:</label>
        <select asp-for="ShippingMethod" class="form-control">
            <option value="Hàng không">Hàng không</option>
            <option value="Đường biển">Đường biển</option>
            <option value="Đường bộ">Đường bộ</option>
        </select>
    </div>
    <div class="form-group">
        <label>Tổng Khối lượng:</label>
        <input asp-for="TotalWeight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tổng Số lượng:</label>
        <input asp-for="TotalQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <label>Dịch vụ Bổ sung:</label>
        <input asp-for="AdditionalServices" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tổng Giá:</label>
        <input asp-for="TotalPrice" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu Thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
