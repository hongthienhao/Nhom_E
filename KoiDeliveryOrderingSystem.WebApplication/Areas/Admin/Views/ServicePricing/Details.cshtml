@{
    ViewData["Title"] = "Chi Tiết Bảng Giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model KoiDeliveryOrderingSystem.Repositories.ServicePricing

<h2 class="text-primary">Chi Tiết Bảng Giá</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Service.Name</h4>
    </div>
    <div class="card-body">
        <p><strong>Khoảng Trọng Lượng:</strong> @Model.WeightRange</p>
        <p><strong>Giá:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Điều Kiện:</strong> @Model.Conditions</p>
        <p><strong>Ghi Chú:</strong> @Model.Notes</p>
    </div>
</div>

<div class="mt-3">
    <a href="/Admin/ServicePricing" class="btn btn-secondary">Quay Lại</a>
</div>
