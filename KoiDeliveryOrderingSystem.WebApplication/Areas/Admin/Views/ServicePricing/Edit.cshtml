@{
    ViewData["Title"] = "Chỉnh Sửa Bảng Giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">Chỉnh Sửa Bảng Giá</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PricingId" />

    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">Dịch Vụ</label>
        <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeightRange" class="control-label">Khoảng Trọng Lượng</label>
        <input asp-for="WeightRange" class="form-control" />
        <span asp-validation-for="WeightRange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Giá</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Conditions" class="control-label">Điều Kiện</label>
        <input asp-for="Conditions" class="form-control" />
        <span asp-validation-for="Conditions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Ghi Chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Cập Nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>
