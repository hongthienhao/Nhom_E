@{
    ViewData["Title"] = "Danh sách Bảng Giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<KoiDeliveryOrderingSystem.Repositories.ServicePricing>

<h2 class="text-primary">Danh Sách Bảng Giá</h2>

<!-- Danh sách bảng giá -->
<div class="accordion" id="pricingAccordion">
    <!-- Vận chuyển hàng không -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingAir">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAir" aria-expanded="true" aria-controls="collapseAir">
                Vận Chuyển Hàng Không
            </button>
        </h2>
        <div id="collapseAir" class="accordion-collapse collapse show" aria-labelledby="headingAir" data-bs-parent="#pricingAccordion">
            <div class="accordion-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loại Hàng</th>
                            <th>Giá</th>
                            <th>Ghi Chú</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pricing in Model.Where(p => p.Service.Category == "Vận chuyển" && p.Service.Name.Contains("Hàng Không")))
                        {
                            <tr>
                                <td>@pricing.Conditions</td>
                                <td>@pricing.Price.ToString("C")</td>
                                <td>@pricing.Service.Description</td>
                                <td>
                                    <a href="/Admin/ServicePricing/Edit/@pricing.PricingId" class="btn btn-warning btn-sm">Sửa</a>
                                    <form action="/Admin/ServicePricing/Delete/@pricing.PricingId" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Vận chuyển đường biển -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingSea">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSea" aria-expanded="false" aria-controls="collapseSea">
                Vận Chuyển Đường Biển
            </button>
        </h2>
        <div id="collapseSea" class="accordion-collapse collapse" aria-labelledby="headingSea" data-bs-parent="#pricingAccordion">
            <div class="accordion-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loại Hàng</th>
                            <th>Giá</th>
                            <th>Ghi Chú</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pricing in Model.Where(p => p.Service.Category == "Vận chuyển" && p.Service.Name.Contains("Đường Biển")))
                        {
                            <tr>
                                <td>@pricing.Conditions</td>
                                <td>@pricing.Price.ToString("C")</td>
                                <td>@pricing.Service.Description</td>
                                <td>
                                    <a href="/Admin/ServicePricing/Edit/@pricing.PricingId" class="btn btn-warning btn-sm">Sửa</a>
                                    <form action="/Admin/ServicePricing/Delete/@pricing.PricingId" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Vận chuyển đường bộ -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingRoad">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRoad" aria-expanded="false" aria-controls="collapseRoad">
                Vận Chuyển Đường Bộ
            </button>
        </h2>
        <div id="collapseRoad" class="accordion-collapse collapse" aria-labelledby="headingRoad" data-bs-parent="#pricingAccordion">
            <div class="accordion-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loại Hàng</th>
                            <th>Giá</th>
                            <th>Ghi Chú</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pricing in Model.Where(p => p.Service.Category == "Vận chuyển" && p.Service.Name.Contains("Đường Bộ")))
                        {
                            <tr>
                                <td>@pricing.Conditions</td>
                                <td>@pricing.Price.ToString("C")</td>
                                <td>@pricing.Service.Description</td>
                                <td>
                                    <a href="/Admin/ServicePricing/Edit/@pricing.PricingId" class="btn btn-warning btn-sm">Sửa</a>
                                    <form action="/Admin/ServicePricing/Delete/@pricing.PricingId" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Dịch vụ bổ sung -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingExtra">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExtra" aria-expanded="false" aria-controls="collapseExtra">
                Dịch Vụ Bổ Sung
            </button>
        </h2>
        <div id="collapseExtra" class="accordion-collapse collapse" aria-labelledby="headingExtra" data-bs-parent="#pricingAccordion">
            <div class="accordion-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loại Dịch Vụ</th>
                            <th>Giá</th>
                            <th>Ghi Chú</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pricing in Model.Where(p => p.Service.Category == "Dịch vụ bổ sung"))
                        {
                            <tr>
                                <td>@pricing.Service.Name</td>
                                <td>@pricing.Price.ToString("C")</td>
                                <td>@pricing.Conditions</td>
                                <td>
                                    <a href="/Admin/ServicePricing/Edit/@pricing.PricingId" class="btn btn-warning btn-sm">Sửa</a>
                                    <form action="/Admin/ServicePricing/Delete/@pricing.PricingId" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-end">
    <a href="/Admin/ServicePricing/Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm Mới Giá
    </a>
</div>
