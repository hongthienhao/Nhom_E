@{
    ViewData["Title"] = "Cập Nhật Trạng Thái Giao Hàng";
    Layout = "~/Areas/DeliveringStaff/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/deliveringStaff.css" />

<div class="container">
    <h2 class="page-title">Cập Nhật Trạng Thái Giao Hàng</h2>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    <form method="post" action="/DeliveringStaff/Home/UpdateStatus">
        <div class="form-group">
            <label for="orderId">Mã Đơn Hàng:</label>
            <input type="text" id="orderId" name="orderId" class="form-control" placeholder="Nhập mã đơn hàng" required />
        </div>
        <div class="form-group">
            <label for="status">Trạng Thái:</label>
            <select id="status" name="status" class="form-control">
                <option value="Đang chuẩn bị">Đang chuẩn bị</option>
                <option value="Đang giao">Đang giao</option>
                <option value="Đã giao thành công">Đã giao thành công</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Cập Nhật</button>
    </form>
    <a href="/DeliveringStaff/Home/Index" class="btn btn-secondary mt-3">Quay Lại </a>
</div>
