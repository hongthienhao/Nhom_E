@model KoiDeliveryOrderingSystem.Repositories.Delivery

@{
    ViewData["Title"] = "Chi tiết giao hàng";
    Layout = "~/Areas/DeliveringStaff/Views/Shared/_Layout.cshtml";
}

<div class="text-center mb-4">
    <h2 class="text-primary">Chi tiết giao hàng</h2>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.DeliveryId</p>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Mã theo dõi:</strong> @Model.TrackingCode</p>
        <p><strong>Trạng thái:</strong> @Model.DeliveryStatus</p>
        <p><strong>Thời gian dự kiến:</strong> @Model.EstimatedTime?.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Thời gian thực tế:</strong> @Model.ActualTime?.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Địa chỉ giao hàng:</strong> @Model.DeliveryAddress</p>
        <p><strong>Ghi chú:</strong> @Model.DeliveryNotes</p>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>
