@model KoiDeliveryOrderingSystem.Repositories.ServicePricing

@{
    ViewData["Title"] = "Chỉnh sửa Bảng Giá Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Chỉnh Sửa Bảng Giá Dịch Vụ</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label for="ServiceId" class="col-sm-2 control-label">Dịch vụ</label>
        <div class="col-sm-10">
            <select id="ServiceId" name="ServiceId" class="form-control" required>
                @foreach (var service in ViewData["Services"] as IEnumerable<KoiDeliveryOrderingSystem.Repositories.Service>)
                {
                    <option value="@service.ServiceId" @(service.ServiceId == Model.ServiceId ? "selected" : "")>@service.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Price" class="col-sm-2 control-label">Giá</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" required />
        </div>
    </div>

    <div class="form-group">
        <label for="EffectiveDate" class="col-sm-2 control-label">Ngày hiệu lực</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="EffectiveDate" name="EffectiveDate" value="@Model.EffectiveDate?.ToString("yyyy-MM-dd")" required />
        </div>
    </div>

    <div class="form-group">
        <label for="Conditions" class="col-sm-2 control-label">Điều kiện</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="Conditions" name="Conditions">@Model.Conditions</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="@Url.Action("Index", "ServicePricing")" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</form>
