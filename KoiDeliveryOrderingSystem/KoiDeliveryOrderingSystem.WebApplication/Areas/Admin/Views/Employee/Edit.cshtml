@{
    ViewData["Title"] = "Chỉnh sửa Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model KoiDeliveryOrderingSystem.Repositories.User

<h2 class="text-primary mb-4">Chỉnh sửa nhân viên</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" action="/Admin/Employee/Edit">
            <!-- Ẩn UserId để gửi dữ liệu về controller -->
            <input type="hidden" name="UserId" value="@Model.UserId" />

            <!-- Nhập tên nhân viên -->
            <div class="mb-3">
                <label for="Name" class="form-label">Tên</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" placeholder="Nhập tên nhân viên" required />
            </div>

            <!-- Nhập email nhân viên -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" placeholder="Nhập email nhân viên" required />
            </div>

            <!-- Nhập số điện thoại -->
            <div class="mb-3">
                <label for="Phone" class="form-label">Số điện thoại</label>
                <input type="text" id="Phone" name="Phone" value="@Model.Phone" class="form-control" placeholder="Nhập số điện thoại" />
            </div>

            <!-- Nhập địa chỉ -->
            <div class="mb-3">
                <label for="Address" class="form-label">Địa chỉ</label>
                <input type="text" id="Address" name="Address" value="@Model.Address" class="form-control" placeholder="Nhập địa chỉ" />
            </div>

            <!-- Chọn vai trò -->
            <div class="mb-3">
                <label for="RoleId" class="form-label">Vai trò</label>
                <select id="RoleId" name="RoleId" class="form-select" required>
                    <option value="" disabled>Chọn vai trò</option>
                    <option value="2" @(Model.RoleId == 2 ? "selected" : "")>Sales Staff</option>
                    <option value="3" @(Model.RoleId == 3 ? "selected" : "")>Delivery Staff</option>
                </select>
            </div>

            <!-- Nút lưu và hủy -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu
                </button>
                <a href="/Admin/Employee/Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>
