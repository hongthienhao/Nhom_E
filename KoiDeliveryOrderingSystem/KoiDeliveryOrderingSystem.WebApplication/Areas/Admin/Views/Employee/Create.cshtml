@model KoiDeliveryOrderingSystem.Repositories.User

@{
    ViewData["Title"] = "Thêm Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">Thêm Nhân Viên</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" action="/Admin/Employee/Create">
            <!-- Nhập Tên -->
            <div class="mb-3">
                <label for="Name" class="form-label">Tên</label>
                <input type="text" id="Name" name="Name" class="form-control" placeholder="Nhập tên nhân viên" required />
            </div>

            <!-- Nhập Email -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Nhập email nhân viên" required />
            </div>

            <!-- Nhập Số điện thoại -->
            <div class="mb-3">
                <label for="Phone" class="form-label">Số điện thoại</label>
                <input type="text" id="Phone" name="Phone" class="form-control" placeholder="Nhập số điện thoại" />
            </div>

            <!-- Nhập Địa chỉ -->
            <div class="mb-3">
                <label for="Address" class="form-label">Địa chỉ</label>
                <input type="text" id="Address" name="Address" class="form-control" placeholder="Nhập địa chỉ" />
            </div>

            <!-- Chọn Vai trò -->
            <div class="mb-3">
                <label for="RoleId" class="form-label">Vai trò</label>
                <select id="RoleId" name="RoleId" class="form-select">
                    <option value="2">Sales Staff</option>
                    <option value="3">Delivery Staff</option>
                </select>
            </div>

            <!-- Nút Thêm Nhân Viên -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-plus"></i> Thêm Nhân Viên
                </button>
                <a href="/Admin/Employee/Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>
