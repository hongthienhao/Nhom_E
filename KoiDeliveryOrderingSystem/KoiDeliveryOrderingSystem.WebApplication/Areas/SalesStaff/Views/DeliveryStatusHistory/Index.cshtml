@{
    ViewData["Title"] = "Danh sách lịch sử trạng thái giao hàng";
    Layout = "~/Areas/SalesStaff/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">Danh Sách Lịch Sử Trạng Thái Giao Hàng</h2>

<!-- Nút thêm trạng thái giao hàng mới -->
<div class="mb-3">
    <a href="/SalesStaff/DeliveryStatusHistory/Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm Lịch Sử Trạng Thái
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Trạng Thái</th>
                        <th>Mã Đơn</th>
                        <th>Trạng Thái</th>
                        <th>Ngày Cập Nhật</th>
                        <th>Ghi Chú</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var statusHistory in Model ?? Enumerable.Empty<KoiDeliveryOrderingSystem.Repositories.DeliveryStatusHistory>())
                    {
                        <tr>
                            <td>@statusHistory.StatusId</td>
                            <td>@statusHistory.OrderId</td>
                            <td>@statusHistory.Status</td>
                            <td>@statusHistory.StatusDate?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@statusHistory.Notes</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <!-- Xem Chi Tiết -->
                                    <a href="/SalesStaff/DeliveryStatusHistory/Details/@statusHistory.StatusId" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>

                                    <!-- Xóa -->
                                    <form action="/SalesStaff/DeliveryStatusHistory/Delete/@statusHistory.StatusId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa lịch sử trạng thái này?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
