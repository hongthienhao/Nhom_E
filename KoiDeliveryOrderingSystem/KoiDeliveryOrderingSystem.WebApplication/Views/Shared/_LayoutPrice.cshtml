@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPrice.cshtml";
}

@{
    Layout = null;
}
<link href="~/Assets/admin/css/styles.css?v=1.1" rel="stylesheet">
<div id="mainContainer">
    <!-- Background effects (particles, stars) -->
    <div class="background-effects">
        <div class="starsec"></div>
        <div class="starthird"></div>
        <div class="starfourth"></div>
        <div class="starfifth"></div>
    </div>

    <!-- Title -->
    <div class="row text-center my-4">
        <div class="col">
            <h1 class="title-h1">
                <span class="light">Bảng giá</span>
            </h1>
        </div>
    </div>

    <!-- Pricing Table Rows -->
    <div class="row d-flex justify-content-between">
        <!-- Đảm bảo các cột được canh đều -->
        <!-- Pricing Card: Vận chuyển hàng không -->
        <div class="col-sm-3 col-md-3 pricing-column-wrapper flex-grow-1 d-flex flex-column align-items-center">
            <!-- Thêm flex-grow-1 -->
            <div class="pricing-column">
                <div class="pricing-price-row">
                    <div class="pricing-price">
                        <div class="pricing-cost">Nhanh chóng</div>
                    </div>
                </div>
                <div class="pricing-row-title">Vận chuyển hàng không</div>
                <figure class="pricing-row">Cá nhỏ (dưới 10kg): 5.000.000 - 10.000.000</figure>
                <figure class="pricing-row">Cá lớn (10-20kg): 10.000.000 - 15.000.000</figure>
                <figure class="pricing-row">Lô hàng lớn (> 20kg): 15.000.000 trở lên</figure>
            </div>
        </div>

        <!-- Pricing Card: Vận chuyển đường biển -->
        <div class="col-sm-3 col-md-3 pricing-column-wrapper flex-grow-1 d-flex flex-column align-items-center">
            <!-- Thêm flex-grow-1 -->
            <div class="pricing-column">
                <div class="pricing-price-row">
                    <div class="pricing-price">
                        <div class="pricing-cost">Chi phí thấp</div>
                    </div>
                </div>
                <div class="pricing-row-title">Vận chuyển đường biển</div>
                <figure class="pricing-row">Cá nhỏ (dưới 10kg): 2.000.000 - 5.000.000</figure>
                <figure class="pricing-row">Cá lớn (10-20kg): 5.000.000 - 7.000.000</figure>
                <figure class="pricing-row">Lô hàng lớn (> 20kg): 7.000.000 trở lên</figure>
            </div>
        </div>

        <!-- Pricing Card: Vận chuyển đường bộ -->
        <div class="col-sm-3 col-md-3 pricing-column-wrapper flex-grow-1 d-flex flex-column align-items-center">
            <!-- Thêm flex-grow-1 -->
            <div class="pricing-column">
                <div class="pricing-price-row">
                    <div class="pricing-price">
                        <div class="pricing-cost">Ổn</div>
                        <div class="pricing-cost">định</div>
                    </div>
                </div>
                <div class="pricing-row-title">Vận chuyển đường bộ</div>
                <figure class="pricing-row">Cá nhỏ (dưới 10kg): 1.000.000 - 3.000.000</figure>
                <figure class="pricing-row">Cá lớn (10-20kg): 3.000.000 - 5.000.000</figure>
                <figure class="pricing-row">Lô hàng lớn (> 20kg): 5.000.000 trở lên</figure>
            </div>
        </div>

        <!-- Pricing Card: Dịch vụ bổ sung -->
        <div class="col-sm-3 col-md-3 pricing-column-wrapper flex-grow-1 d-flex flex-column align-items-center">
            <!-- Thêm flex-grow-1 -->
            <div class="pricing-column">
                <div class="pricing-price-row">
                    <div class="pricing-price">
                        <div class="pricing-cost">Bổ</div>
                        <div class="pricing-cost">sung</div>
                    </div>
                </div>
                <div class="pricing-row-title">Dịch vụ bổ sung</div>
                <figure class="pricing-row">Bảo hiểm hàng hóa: 1% - 2% giá trị hàng hóa</figure>
                <figure class="pricing-row">Theo dõi và kiểm tra thường xuyên: 500.000 - 1.000.000  </figure>
                <figure class="pricing-row">Dịch vụ xử lý thủ tục hải quan: 1.000.000 - 2.000.000</figure>
            </div>
        </div>
    </div>

</div>
@RenderBody()
