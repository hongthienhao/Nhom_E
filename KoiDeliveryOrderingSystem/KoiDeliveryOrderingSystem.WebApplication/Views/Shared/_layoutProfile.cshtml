<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - KoiDelivery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="KoiDelivery, dịch vụ vận chuyển, vận chuyển cá Koi">
    <meta name="description" content="Dịch vụ vận chuyển cá Koi hàng đầu Việt Nam - KoiDelivery">

    <!-- Favicon -->
    <link rel="icon" href="@Url.Content("~/img/logoweb.jpg")" type="image/png">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet">
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
        <a href="/" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
            <img src="@Url.Content("~/img/logoweb.jpg")" alt="KoiDelivery Logo" class="me-2" style="width: 40px; height: 40px;">
            <h2 class="mb-2 text-white">KoiDelivery</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Trang chủ</a>
                <a href="@Url.Action("Create", "Order")" class="nav-item nav-link">Dịch vụ</a>
                <a href="@Url.Action("Support", "Home")" class="nav-item nav-link">Hỗ trợ</a>
                <a href="@Url.Action("Contact", "Home")" class="nav-item nav-link">Liên hệ</a>
                <a href="@Url.Action("Index", "UserProfile")" class="nav-item nav-link">Thông tin cá nhân</a>
            </div>
            <h4 class="m-0 pe-lg-5 d-none d-lg-block">
                <a href="@Url.Action("Login", "Account")">
                    <i class="fas fa-user login-icon" title="Đăng nhập"
                       style="color: inherit; transition: color 0.3s; cursor: pointer;"
                       onmouseover="this.style.color='#FF3E41'"
                       onmouseout="this.style.color='inherit'"></i>
                </a>
            </h4>
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- RenderBody -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/main.js")"></script>
</body>
</html>
