@{
    Layout = null;  // Tắt layout cho view này
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
   

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Phông chữ Web của Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Thư viện Icon -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Thư viện CSS -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- CSS Bootstrap Tùy chỉnh -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS Mẫu -->
    <link href="~/css/Contact.css" rel="stylesheet">

    <style>
        .map-container {
            position: relative;
            height: 100%;
        }

        .contact-info {
            background: #ffffff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
            font-size: 14px;
        }

            .contact-info h5 {
                font-size: 16px;
                margin-bottom: 10px;
            }

            .contact-info p {
                margin: 5px 0;
            }
    </style>
</head>

<body>


    <!-- Phần Liên Hệ Bắt đầu -->
    <div class="container overflow-hidden py-5">
        <div class="row g-5">
            <!-- Form Liên Hệ -->
            <div class="col-md-6 contact-form wow fadeIn" data-wow-delay="0.1s">
                <h6 class="text-secondary text-uppercase">Liên hệ với chúng tôi</h6>
                <h1 class="mb-4">Liên hệ để giải đáp thắc mắc</h1>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" id="name" placeholder="Họ và tên">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Chủ đề</label>
                        <input type="text" class="form-control" id="subject" placeholder="Chủ đề">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Tin nhắn</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Viết tin nhắn tại đây"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Gửi tin nhắn</button>
                </form>
            </div>

            <!-- Bản Đồ và Thông Tin Liên Hệ -->
            <div class="col-md-6 wow fadeInRight" data-wow-delay="0.1s">
                <div class="map-container">
                    <iframe class="w-100" style="height: 300px; border: 0;"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15678.752580229021!2d106.6173419!3d10.870013!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zQ2jhu41pIG5ow6JuIFRob25nIEzGsOG7mW5n!5e0!3m2!1svi!2s!4v1635771619145!5m2!1svi!2s"
                            allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    <div class="contact-info">
                        <h5>Thông tin liên hệ</h5>
                        <p><strong>Cơ quan chủ quản:</strong><br>Công ty Koi Delivery.<br>Giấy phép: 1183/GP-TTĐT cấp ngày 04/11/2024 bởi Sở TT-TT TPHCM</p>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>UTH quận 12</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+84 123456789</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>uth@ut.edu.vn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <strong><a href="@Url.Action("Index", "Home")">Quay lại trang chủ</a></strong>
    </div>
    <!-- Phần Liên Hệ Kết thúc -->
    <!-- Nút Cuộn Lên -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-0 back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- Thư viện JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- JavaScript Mẫu -->
    <script src="js/main.js"></script>
</body>

</html>
