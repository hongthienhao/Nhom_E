@model KoiDeliveryOrderingSystem.Models.Order

<h2>Đặt hàng mới</h2>

<form asp-action="CreateOrder" method="post">
    <div>
        <label for="CustomerId">Khách hàng</label>
        <input type="number" asp-for="CustomerId" required />
    </div>

    <div>
        <label for="PickupLocation">Địa điểm xuất phát</label>
        <input type="text" asp-for="PickupLocation" required />
    </div>

    <div>
        <label for="DeliveryLocation">Địa điểm giao</label>
        <input type="text" asp-for="DeliveryLocation" required />
    </div>

    <div>
        <label for="ShippingMethod">Phương thức vận chuyển</label>
        <select asp-for="ShippingMethod" required>
            <option value="Hàng không">Hàng không</option>
            <option value="Đường biển">Đường biển</option>
            <option value="Đường bộ">Đường bộ</option>
        </select>
    </div>

    <div>
        <label for="TotalWeight">Tổng khối lượng</label>
        <input type="number" asp-for="TotalWeight" required />
    </div>

    <div>
        <label for="TotalQuantity">Tổng số lượng cá</label>
        <input type="number" asp-for="TotalQuantity" required />
    </div>

    <div>
        <label for="AdditionalServices">Dịch vụ gia tăng</label>
        <select asp-for="AdditionalServices">
            @foreach (var service in ViewBag.Services)
            {
                <option value="@service.Name">@service.Name</option>
            }
        </select>
    </div>

    <button type="submit">Đặt hàng</button>
</form>
