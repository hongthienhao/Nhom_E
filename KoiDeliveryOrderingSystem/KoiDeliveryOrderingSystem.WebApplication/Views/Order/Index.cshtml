@model IEnumerable<KoiDeliveryOrderingSystem.Repositories.Order>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Đơn Hàng</title>
    <link rel="stylesheet" href="~/css/StyleOrder.css" />
</head>
<body>
    <div class="container">
        <h2 class="title">Danh sách Đơn Hàng</h2>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Địa điểm lấy hàng</th>
                        <th>Địa điểm giao hàng</th>
                        <th>Trạng thái</th>
                        <th>Tổng giá</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.PickupLocation</td>
                            <td>@order.DeliveryLocation</td>
                            <td>@order.Status</td>
                            <td>@order.TotalPrice</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.OrderId">Xem chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
