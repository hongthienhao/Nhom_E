@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null; // Không sử dụng layout mặc định
}
@model KoiDeliveryOrderingSystem.Models.Order

<h2 class="text-center">Chi tiết đơn hàng</h2>

<p><strong>Mã đơn hàng:</strong> @Model.OrderId</p>
<p><strong>Địa điểm xuất phát:</strong> @Model.PickupLocation</p>
<p><strong>Địa điểm giao:</strong> @Model.DeliveryLocation</p>
<p><strong>Khối lượng:</strong> @Model.TotalWeight kg</p>
<p><strong>Số lượng cá Koi:</strong> @Model.TotalQuantity</p>
<p><strong>Phương thức vận chuyển:</strong> @Model.ShippingMethod</p>
<p><strong>Dịch vụ gia tăng:</strong> @Model.AdditionalServices</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>

<h3>Chi tiết các loại cá Koi</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Loại cá Koi</th>
            <th>Số lượng</th>
            <th>Khối lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.KoiFishType</td>
                <td>@detail.Quantity</td>
                <td>@detail.Weight kg</td>
            </tr>
        }
    </tbody>
</table>
