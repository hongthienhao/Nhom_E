@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null; // Không sử dụng layout mặc định
}
@model KoiDeliveryOrderingSystem.Models.Order

<h2 class="text-center">Sửa thông tin đơn hàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderId" />

    <!-- Các trường tương tự như Create -->
    <div class="form-group">
        <label for="PickupLocation">Địa điểm xuất phát</label>
        <input asp-for="PickupLocation" class="form-control" />
        <span asp-validation-for="PickupLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DeliveryLocation">Địa điểm giao</label>
        <input asp-for="DeliveryLocation" class="form-control" />
        <span asp-validation-for="DeliveryLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TotalWeight">Khối lượng (kg)</label>
        <input asp-for="TotalWeight" class="form-control" type="number" step="0.1" />
        <span asp-validation-for="TotalWeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TotalQuantity">Số lượng cá Koi</label>
        <input asp-for="TotalQuantity" class="form-control" type="number" />
        <span asp-validation-for="TotalQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ShippingMethod">Phương thức vận chuyển</label>
        <select asp-for="ShippingMethod" class="form-control">
            <option value="Hàng không">Hàng không</option>
            <option value="Đường biển">Đường biển</option>
            <option value="Đường bộ">Đường bộ</option>
        </select>
        <span asp-validation-for="ShippingMethod" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>
